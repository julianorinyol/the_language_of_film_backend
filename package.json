{
  "name": "the_language_of_film_backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "mongoose": "^5.7.12"
  },
  "scripts": {
    "start": "node dist/server.js",
    "seed": "ts-node scripts/seed.ts",
    "db": "ts-node scripts/databaseCli.ts list",
    "build": "rm -rf ./dist/ && tsc",
    "dev": "PORT=8000 nodemon",
    "test": "DATABASE_HOST=localhost DATABASE_NAME=language-of-film-testdb PORT=1234 jest",
    "test:watch": "PORT=1234 jest --watch"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/mongoose": "^5.5.32",
    "@types/node": "^12.12.11",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "NODE_ENV=development ts-node src/server.ts",
    "ext": "ts"
  }
}
